@require 'responsive.styl';
.text-center
  text-align                   center
.text-left
  text-align                   left
.text-right
  text-align                   right

html
  default-font()

h1
  font-family                   $primary-font-demi
  font-size                     2.5rem //40px
  +at(1)
    font-size                   30px
  margin                        0 0 20px 0
  color                         $color-charcoal

h2
  font-family                   $primary-font-demi
  font-size                     1.875rem //30px
  margin                        0 0 20px 0
  color                         $color-charcoal


p
  margin-top                    0
  margin-bottom                 1rem
  line-height                   1.63
  &.large
    font-size                   1.125rem


.text-left
  text-align                    left
.text-center
  text-align                    center
.text-right
  text-align                    right